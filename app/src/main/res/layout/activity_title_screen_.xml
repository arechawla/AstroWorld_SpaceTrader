<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    tools:context=".views.titleScreen_Activity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="429dp"
        android:layout_height="492dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122"
        app:srcCompat="@drawable/title_image" />

    <Button
        android:id="@+id/menu_play_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="New Game"
        android:textColor="#000"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toTopOf="@+id/menu_continue_button"
        app:layout_constraintEnd_toEndOf="@+id/menu_continue_button"
        app:layout_constraintStart_toStartOf="@+id/menu_continue_button" />

    <Button
        android:id="@+id/menu_continue_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="Continue"
        android:textColor="#000"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toTopOf="@+id/menu_settings_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/menu_settings_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Settings"
        android:textColor="#000"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>