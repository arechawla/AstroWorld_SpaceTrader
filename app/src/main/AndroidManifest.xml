<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gatech.astroworld.spacetrader">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.ShipyardActivity"></activity>
        <activity android:name=".views.titleScreen_Activity" />
        <activity android:name=".views.LoadingScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.galaxyView_Activity"
            android:label="@string/title_activity_galaxy_view_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.PlayerInfo" />
        <activity
            android:name=".views.configScreen_Activity"
            android:noHistory="false" />
        <activity android:name=".views.playerReviewScreen_Activity" />
        <activity android:name=".views.planetView_Activity" />
        <activity android:name=".views.market_Activity" />
        <activity android:name=".views.menu_Activity" />
        <activity android:name=".views.systemView_Activity" />
    </application>

</manifest>